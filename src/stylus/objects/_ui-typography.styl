.typeset p,
.typeset table,
.typeset h1,
.typeset h2,
.typeset h3,
.typeset h4,
.typeset h5,
.typeset h6,
.typeset ul,
.typeset ol
  margin-bottom 17px


/**
 * Table
 */
.typeset table
  width 100%
  overflow auto
  word-break normal
  word-break keep-all
  margin-bottom 1.43999rem
  padding-top 0.56001rem

.typeset table thead tr
  border-bottom 2px solid #879094
  font-size font-x-small

.typeset table thead tr th
  text-align left
  padding 0px 17px 12px
  color #879094
  font-size 11px

.typeset table tbody tr
  border-bottom 1px solid #E9ECED

.typeset table thead tr th,
.typeset table tbody tr td
  padding 10px 20px


/**
 * H1
 */
.typeset h1,
.typeset h2
  color #879094
  font-size 22px


/**
 * H2
 */
.typeset h2
  margin-top (17*4)px

.typeset h2 ~ h3
  margin-top (17*3)px

.typeset h2 + h3
  margin-top 0 !important


/**
 * H3
 */
.typeset h3
  border-bottom 1px solid #E9ECED
  padding 0 0 12px 17px

.typeset h3 ~ p,
.typeset h3 ~ table
  padding 0 20px

.typeset h3 ~ pre
  margin 0 20px 17px

.typeset h3 ~ ul,
.typeset h3 ~ ol
  padding 0 40px

/**
 * List
 */
.typeset ul,
.typeset ol
  padding-left 20px

.typeset ul li,
.typeset ol li
  margin-bottom 17px


/**
 * Link
 */
.typeset p a,
.typeset ul a,
.typeset ol a
  color color-link
  background-image: linear-gradient(to bottom,rgba(0, 0, 0, 0) 50%,lighten(color-link,20%) 50%);
  background-position: 0 93%;
  background-repeat: repeat-x;
  background-size: 100% 0.15rem;
  text-shadow 0.1rem 0 #fff,0.15rem 0 #fff,-0.1rem 0 #fff,-0.15rem 0 #fff


/**
 * Code
 */
.typeset pre
  padding 16px
  overflow auto
  font-size 85%
  line-height 1.45
  background-color #f7f7f7
  border-radius 3px
  word-wrap normal

.typeset pre > code
  display inline
  max-width initial
  padding 0
  margin 0
  overflow initial
  line-height inherit
  word-wrap normal
  background-color transparent
  border 0
  font-size 100%
  word-break normal
  white-space pre


.typeset pre > code:before,
.typeset pre > code:after
  content: normal
